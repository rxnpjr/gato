<div class="container">

<h2 class="row center white-text">SignUp</h2>

      <div class="row">
        <div class="offset-s3 col s6">
          <div class="card red">
            <div class="card-content white-text">

              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= devise_error_messages! %>

                <div class="input-field">
                  <%= f.label :email, class: "white-text" %><br />
                  <%= f.email_field :email, autofocus: true %>
                </div>

                <div class="input-field">
                  <%= f.label :password, class: "white-text"  %>
                  <% if @validatable %>
                  <!-- <em>(<%= @minimum_password_length %> characters minimum)</em> -->
                  <% end %><br />
                  <%= f.password_field :password, autocomplete: "off", class: "white-text" %>
                </div>

                <div class="input-field">
                  <%= f.label :password_confirmation %><br />
                  <%= f.password_field :password_confirmation, autocomplete: "off" %>
                </div>

                <div class="actions">
                  <button action="submit" class="btn-large waves-effect waves-light btn-flat red white-text" > Enviar</button>
                </div>
              <% end %>
              </div>
            </div>
          </div> 
        </div> 
      </div>         
<%= render "devise/shared/links" %>
